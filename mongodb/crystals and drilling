            em.add_field(name= "send your samples for research with #sendresearch samples (amount) for some exciting results!", value = "âœ§à¼â”‰â”‰â”‰â”‰â”‰Ëšâ‹ â‹ â‹Ëšâ”‰â”‰â”‰â”‰â”‰à¼âœ§", inline=False)
